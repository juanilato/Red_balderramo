
//genera el cliente de prisma
generator client {
  provider = "prisma-client-js"
}
// genera el servidor de la información (postgreSQL) y 
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
// usuario creado, genera id unico, solicita usuario (email), rol y contraseña


model User {
  id       Int    @id @default(autoincrement())
  usuario  String @unique
  rol      String
  password String
  forms    Form[] @relation("UserForms")  
}

model Form {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation("UserForms", fields: [userId], references: [id])
}
